/* Lowest Number and Position */

#include<stdio.h>
int main()
{
    int n,j,min;
    scanf("%d",&n);
    int arr[n];
    for(int i=0; i<n; i++)
    {
        scanf("%d",&arr[i]);
    }
    min=arr[0];
    for(int i=0; i<n; i++)
    {
        if(arr[i]<min)
        {
            min=arr[i];
            j=i;
        }
    }
    printf("Menor valor: %d\nPosicao: %d\n",min,j);
    return 0;
}


